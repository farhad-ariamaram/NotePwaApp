@page



<div class="row">
    <div class="col-8 offset-2">
        <div class="form-group">
            <input id="title" class="form-control" type="text" name="title" placeholder="Title ..." />
        </div>
        <div class="form-group">
            <textarea id="body" class="form-control" name="body" placeholder="Body ..."></textarea>
        </div>
        <div class="form-group">
            <input onclick="insert()" class="btn btn-primary" type="button" name="submit" value="Save" />
            <a class="btn btn-link" href="./Index">Back</a>
        </div>
    </div>
</div>

<script>
        function insert() {
            var title = document.getElementById("title").value;
            var body = document.getElementById("body").value;
            var sum = body.substring(0, 50);
            var note = {
                id: uuidv4(),
                title: title,
                body: body,
                summary: sum
            };
            db.Create(note)
                .then(function () {
                    window.location.href = './Index';
                });
        }
</script>